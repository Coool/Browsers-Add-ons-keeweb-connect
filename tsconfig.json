{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": "src"
  },
  "paths": {
    "background/*": ["background/*"],
    "common/*": ["common/*"],
    "content/*": ["content/*"],
    "options/*": ["options/*"]
  },
  "include": ["src/**/*"]
}